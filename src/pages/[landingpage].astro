---
export const prerender = true;
import Button from "@/components/Button/Button.astro";
import SiteLogo from "@/components/SiteLogo/SiteLogo.astro";
import siteData from "@/config/siteData.json";
import LandingLayout from "@layouts/LandingLayout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
	const posts = await getCollection("landing");
	return posts.map((post) => ({
		params: { landingpage: post.id },
		props: { post },
	}));
}
const { post } = Astro.props;
const { title, description, heroImage, backgroundImage } = post.data;
---

<LandingLayout
	title={title + " - " + siteData.title}
	description={description}
	heroImage={backgroundImage}
>
	<div class="bg-blue/70 fixed inset-0"></div>
	<section class="relative w-full text-center text-white">
		<a
			href="#"
			class="bg-primary-600 flex justify-center p-6 text-center text-2xl font-bold text-white"
		>
			<h2>{title}</h2>
		</a>

		<div class="flex justify-center py-12">
			<SiteLogo />
		</div>

		<div class="mx-auto w-full max-w-[80%]">
			<h1 class="mb-12 text-5xl">
				{description}
			</h1>

			<h3 class="text-2xl">
				THIS FREE ONLINE COURSE IS DESIGNED TO PROVIDE YOU WITH A SIMPLIFIED ROADMAP TO START,
				MANAGE, AND GROW YOUR FIREARM INSTRUCTING BUSINESS.
			</h3>
		</div>

		<div class="mx-auto my-10 max-w-[1000px]">
			{heroImage && <Image src={heroImage} alt="Hero Image" />}
		</div>

		<Button
			variant="primary"
			href="https://www.bullseyebusinessblueprint.com/"
			class="mx-auto mb-10 block max-w-[400px] gap-4 px-5 py-4 text-base"
		>
			Click to learn more
		</Button>
	</section>
</LandingLayout>
